@{
}

@model IEnumerable<SimpleBlog.Core.Models.PostModel>

<h2>Posts</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Novo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Conteúdo</th>
            <th>Usuário</th>
            <th>Data de Criação</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Content</td>
                <td>@item.User.UserName</td>
                <td>@item.CreatedDate</td>
                <td>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    @if (ViewData["UserId"]?.ToString() == item.UserId)
                    {
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>